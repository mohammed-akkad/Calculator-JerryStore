            android:layout_height="220dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/jerry_card_shape"
            app:layout_constraintBottom_toBottomOf="@id/view_jerry_card_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/guideline_jerry"
