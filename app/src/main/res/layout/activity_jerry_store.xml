            tools:ignore="UnusedAttribute" />

        <View
            android:id="@+id/view_price_three"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/money_background_shape"
            app:layout_constraintBottom_toBottomOf="@+id/view_jerry_card_three"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_cardShopThree"
            app:layout_constraintStart_toStartOf="@+id/view_jerry_card_three"
            app:layout_constraintTop_toBottomOf="@+id/textView_tomBomb_subTitle"
