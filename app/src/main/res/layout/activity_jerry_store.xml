            android:textColor="#1F1F1E"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/view_jerry_card_three"
            app:layout_constraintStart_toStartOf="@+id/view_jerry_card_three"
            app:layout_constraintTop_toBottomOf="@+id/imageView_tomBomb" />

        <TextView
            android:id="@+id/textView_tomBomb_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_regular"
            android:lineHeight="16sp"
            android:text="@string/he_blows_himself_up_nbefore_jerry_can_catch_him"
