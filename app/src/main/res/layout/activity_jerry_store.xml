            app:layout_constraintBottom_toBottomOf="@+id/imageView_bugMoneySecond"
            app:layout_constraintEnd_toStartOf="@+id/guideline_search"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView_bugMoneySecond"
            app:layout_constraintTop_toTopOf="@+id/imageView_bugMoneySecond"
            app:layout_constraintVertical_bias="0.25" />

        <View
            android:id="@+id/view_jerry_card_three"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/jerry_card_shape"
            app:layout_constraintEnd_toStartOf="@id/guideline_jerry"
            app:layout_constraintStart_toStartOf="@id/view_jerry_card_first"
            app:layout_constraintTop_toBottomOf="@+id/view_jerry_card_first" />

        <View
            android:id="@+id/view_jerry_card_four"
            android:layout_width="0dp"
