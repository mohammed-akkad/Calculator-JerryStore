            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card_show_shape"
            android:contentDescription="@string/card_shop_first"
            android:src="@drawable/cart"
            app:layout_constraintBottom_toBottomOf="@+id/view_price_first"
            app:layout_constraintEnd_toEndOf="@+id/view_jerry_card_first"
            app:layout_constraintTop_toTopOf="@+id/view_price_first" />

        <ImageView
            android:id="@+id/imageView_bugMoney"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/bug_money"
            android:src="@drawable/money_bag"
            app:layout_constraintBottom_toBottomOf="@+id/view_price_first"
            app:layout_constraintStart_toStartOf="@+id/view_price_first"
            app:layout_constraintTop_toTopOf="@+id/view_price_first" />

        <TextView
            android:id="@+id/textView_discount_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/ibm_semi_bold"
            android:text="@string/disCount_price"
            android:textColor="#03578A"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_bugMoney"
            app:layout_constraintTop_toTopOf="@+id/imageView_bugMoney" />

        <TextView
            android:id="@+id/textView_price_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/ibm_semi_bold"
            android:text="@string/_10_cheeses"
            android:textColor="#03578A"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView_discount_first"
            app:layout_constraintTop_toTopOf="@+id/textView_discount_first" />

        <ImageView
            android:id="@+id/imageView_tomLover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/tome_lover"
            android:scaleType="fitXY"
            android:src="@drawable/jerry_2"
            app:layout_constraintEnd_toEndOf="@+id/view_jerry_card_second"
            app:layout_constraintStart_toStartOf="@+id/view_jerry_card_second"
            app:layout_constraintTop_toTopOf="@+id/guideline_jerry_card_first" />

        <TextView
            android:id="@+id/textView_tomLover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ibm_semi_bold"
            android:text="@string/tom_the_lover"
            android:textAlignment="center"
            android:textColor="#1F1F1E"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/view_jerry_card_second"
            app:layout_constraintStart_toStartOf="@+id/view_jerry_card_second"
            app:layout_constraintTop_toBottomOf="@+id/imageView_tomLover" />

        <TextView
            android:id="@+id/textView_tomLover_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/ibm_regular"
            android:lineHeight="16sp"
            android:text="@string/he_loves_one_sidedly_nand_is_beaten_by_the_other_nside"
            android:textAlignment="center"
            android:textColor="#969799"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/view_jerry_card_second"
            app:layout_constraintStart_toStartOf="@+id/view_jerry_card_second"
            app:layout_constraintTop_toBottomOf="@+id/textView_tomLover"
            tools:ignore="UnusedAttribute" />

        <View
            android:id="@+id/view_price_second"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/money_background_shape"
