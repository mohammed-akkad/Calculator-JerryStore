            android:layout_height="220dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/jerry_card_shape"
            app:layout_constraintEnd_toStartOf="@id/guideline_jerry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_cheap_tom_section" />

        <View
