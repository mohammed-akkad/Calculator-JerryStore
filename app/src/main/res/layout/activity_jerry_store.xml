            android:contentDescription="@string/tom_bomb"
            android:scaleType="fitXY"
            android:src="@drawable/jerry_three"
            app:layout_constraintEnd_toEndOf="@+id/view_jerry_card_three"
            app:layout_constraintStart_toStartOf="@+id/view_jerry_card_three"
            app:layout_constraintTop_toTopOf="@+id/guideline_jerry_card_second" />

        <TextView
            android:id="@+id/textView_tomBomb"
            android:layout_width="wrap_content"
